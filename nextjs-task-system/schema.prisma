generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" 
}



model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  roleId    Int
  role      Role     @relation(fields: [roleId], references: [id])
  groupId   Int?     
  group     Group?   @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
  password String
}

model Group {
  id    Int     @id @default(autoincrement())
  name  String
  users User[] 
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String 
  users User[] 
}